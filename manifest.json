{
    "manifest_version": 3,
    "name": "No More Next Line Character",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "activeTab",
        "offscreen",
        "storage",
        "tabs"
    ],
    "commands": {
        "process" : {
            "suggested_key": {
                 "windows": "Alt+Z" 
            },
            "description": "Procees the text in clipboard."
        }
  }
}